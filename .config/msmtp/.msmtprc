# https://decatec.de/linux/linux-einfach-e-mails-versenden-mit-msmtp/
defaults
auth            on
tls             on
tls_trust_file	/etc/ssl/certs/ca-certificates.crt
logfile         /home/<USERNAME>/.config/msmtp/msmtp.log

account         <EMAILADRESS>
host            smtp.office365.com
port            587
from            <EMAILADRESS>
user            <EMAILADRESS>
#passwordeval    "pass <EMAILADRESS>"
password       "<PASSWORD>"
account default : <EMAILADRESS>
